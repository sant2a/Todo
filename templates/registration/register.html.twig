{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}


{% block body %}
    <body>
    <div class="container">
        <div class="row">
            <div class="col-4">
                <div class="register">

                    <h1>Регистрация</h1>
                    {{ form_start(registrationForm) }}
                    <div class="name_row">
                        {{ form_row(registrationForm.email, {'attr':{'class': 'form-control'}}) }}
                        {{ form_row(registrationForm.plainPassword,{'attr':{'class': 'form-control'}}) }}
                    </div>
                    <button class="btn btn-primary">Создание учетной записи</button>

                    {{ form_end(registrationForm) }}
                </div>

            </div>
        </div>
    </div>
    </body>
    <style>
        .register {
            padding-top: 80px;

        }

        body {
            background: -webkit-gradient(linear, left top, left bottom, from(rgba(22, 22, 22, 0.3)), color-stop(75%, rgba(22, 22, 22, 0.7)), to(#161616)), url("../img/bg-masthead.jpg");
            background: linear-gradient(to bottom, rgba(22, 22, 22, 0.3) 0%, rgba(22, 22, 22, 0.7) 75%, #161616 100%), url("../img/bg-masthead.jpg");
        }

        h1 {
            text-align: center;
        }
    </style>
{% endblock %}
