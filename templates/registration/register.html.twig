{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}


{% block body %}
    {% block head %}
        <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
            <div class="container">
                <a class="navbar-brand js-scroll-trigger" href="{{ path('home') }}">To Do List</a>
                <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse"
                        data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false"
                        aria-label="Toggle navigation">
                    Menu
                    <i class="fas fa-bars"></i>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ml-auto">

                        <li class="nav-item">
                            <a class="nav-link js-scroll-trigger" href="{{ path('todo_index') }}">Инфо</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link js-scroll-trigger" href="{{ path('app_login') }}">Войти</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link js-scroll-trigger" href="{{ path('register') }}">Регистрация</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    {% endblock %}
    <body>
    <div class="container">
        <div class="row">
            <div class="col-4">
                <div class="register">

                    <h1>Создание учетной записи</h1>
                    {{ form_start(registrationForm) }}
                    <div class="name_row">
                        {{ form_row(registrationForm.email, {'attr':{'class': 'form-control','title' :'emailer'}}) }}
                        {{ form_row(registrationForm.plainPassword,{'attr':{'class': 'form-control'}}) }}
                    </div>
                    <button class="btn btn-primary">Подтвердить</button>

                    {{ form_end(registrationForm) }}
                </div>

            </div>
        </div>
    </div>
    </body>
    <style>
        .register {
            padding-top: 170px;

        }


        body {

            background: url("../img/bg-masthead.jpg") no-repeat fixed  center ;
            -webkit-background-size: 100%;
        }


        h1 {
            text-align: center;
        }
        .contact-section{
            padding-top: 250px;
        }
        footer{
            padding-top: 30px;
        }
    </style>
{% endblock %}
