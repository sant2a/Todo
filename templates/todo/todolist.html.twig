{% extends 'base.html.twig' %}

{% block title %}Todo index{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
<div class="col-4">
        <div class="list-group">
            <a href="{{ path('todo_new') }}" class="list-group-item list-group-item-action">Добавить новое  <i class="fas fa-plus"></i></a>
        </div>
</div>
            <div class="col-8">
            {% for todo in todos %}

                        <div class="row">
                            <div class="col-6">
                        <div class="card">
                            <div class="card-body">

                                <label for="checkbox"><input type="checkbox" id="checkbox" >  {{ todo.name }}
                                <a href="{{ path('todo_edit', {'id': todo.id}) }}" class="mx-2">
                                    <i class="fas fa-user-edit"></i></a>
                                <a href="{{ path('todo_show', {'id': todo.id}) }}" class="mx-2">
                                    <i class="fas fa-info-circle"></i></a>
                                <form method="post" action="{{ path('todo_delete', {'id': todo.id}) }}" onsubmit="return confirm('Вы уверены?');">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ todo.id) }}">
                                    <button>
                                        <i class="fas fa-trash" ></i></button>
                                </form>
                                </label>
                                </div>
                            </div>
                        </div>
                    </div>
            {% else %}
                <div class="col-12">
                <div class="row">

                <h1>Пока нет записей...</h1>
                </div></div>
            {% endfor %}
        </div>  </div>
</div>
    <style>
.checkboxDecoration2{
    text-decoration: line-through;
}
        h5{
            text-align: center;
            font-size: 35px;
        }
        h1{

            padding-top: 100px;
        }
        .col-8{
            padding-top: 80px;
        }

        .col-4{
            padding-top: 80px;
        }
        .col-6{
            padding-top: 5px;
        }

        .card-body{
            font-size: 30px;
        }
        .list-group-item {
            font-size: 20px;
        }
    </style>
    <script>
        $("#checkbox").click(function () {
            if ($(this).is(":checked")) {
                $(".checkboxDecoration").addClass("checkboxDecoration2");
            } else {
                $(".checkboxDecoration").removeClass("checkboxDecoration2");
            }
        });

    </script>
{% endblock %}
