{% extends 'base.html.twig' %}

{% block title %}Todo index{% endblock %}
{% block modals %}
    <div id="modalBackground">
        <template id="todoModalTemplate">
            <div class="modal-wrapper">
                <div class="modal-title">
                    <div class="modal-description">
                        <div class="modal-action"></div>
                    </div>
                </div>
            </div>
        </template>
    </div>
{% endblock %}
{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-4">
                <div class="list-group">
                    <a href="{{ path('todo_new') }}" class="list-group-item list-group-item-action">Добавить новое <i
                                class="fas fa-plus"></i></a>
                </div>
            </div>
            <div class="col-8">
                {% for todo in todos %}

                    <div class="row">
                        <div class="col-6">
                            <div class="card">
                                <div class="card-body">

                                    <input type="checkbox" name="checkbox"> <span> {{ todo.name }}</span>
                                    <a href="{{ path('todo_edit', {'id': todo.id}) }}" class="mx-2">
                                        <i class="fas fa-user-edit"></i></a>
                                    <a href="{{ path('todo_show', {'id': todo.id}) }}" class="mx-2">
                                        <i class="fas fa-info-circle"></i></a>
                                    <a href="" class="mx-2" data-toggle="modal" data-target="#exampleModal">
                                        <i class="fas fa-info-circle"></i></a>
                                    <a href="" class="mx-2" onclick="deleteTodo()">
                                        <i class="fas fa-info-circle"></i></a>

                                </div>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="col-12">
                        <div class="row">

                            <h1>Пока нет записей...</h1>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>


    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">{todo.name}</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    {todo.description}
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
    <style>
        input:checked + span {
            text-decoration: line-through;
        }

        h5 {
            text-align: center;
            font-size: 35px;
        }

        h1 {

            padding-top: 100px;
        }


        .col-6 {
            padding-top: 5px;
        }

        .card-body {
            font-size: 30px;
        }

        .list-group-item {
            font-size: 20px;
        }

        #modalBackground {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: #ccc;
            z-index: 100;
        }
    </style>
    <script>
        function showModal(name, description) {
            let example = $("#exampleModal").html()
                .replace('{todo.name}', name)
                .replace('{todo.description}', description);
            $("#exampleModal").after(example)
        }

        function deleteTodo() {
            $.post("{{ path("delete_todo", {'id': todo.id}) }}", {}, function (data) {
                if (data.status === "success") {
                    alert("Успешное удалине!");
                } else {
                    alert("Что-то пошло не так");
                }
            });
        }


    </script>
{% endblock %}
