        form {


        }

        .col-2 {
            padding-top: 50px;
        }

        body {


        }

        h1 {
            padding-top: 80px;
            text-align: center;
        }

        .contact-section {
            padding-top: 80px;
        }

        footer {
            padding-top: 30px;
        }

        .card {
           text-align: center;
        }
    </style>
{% endblock %}
